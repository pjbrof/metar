<!DOCTYPE html>
<html lang="en-US">
  <head>
    <title>Flight Manifest</title>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=Edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <style>
      body {
        margin: 1rem;

        @media screen and (min-width: 1024px) {
          margin: 2rem;
        }
      }
      table * {
        border: 1px solid gray;
        padding: 0.25rem;
      }
      .grid {
        display: grid;
        grid-template-columns: 1fr;

        @media screen and (min-width: 1024px) {
          grid-template-columns: 1fr 1fr;
        }
      }
    </style>
  </head>
  <body>
    <h1>Todays Flights (<%= day %>)</h1>
    <div class="grid">
      <div>
        <h2>Arrivals:</h2>
        <table>
          <thead>
            <tr>
              <th>Ident</th>
              <th>From</th>
              <th>Aircraft</th>
              <th>Time</th>
            </tr>
          </thead>
          <tbody>
            <% arrivals.forEach(function(item,index){ %>
            <tr>
              <td><%= item.ident %></td>
              <td><%= item.origin.city %></td>
              <td><%= item.aircraft_type %></td>
              <td><%= item.scheduled_on %></td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
      <div>
        <h2>Departures:</h2>
        <table>
          <thead>
            <tr>
              <th>Ident</th>
              <th>Destination</th>
              <th>Aircraft</th>
              <th>Time</th>
            </tr>
          </thead>
          <tbody>
            <% departures.forEach(function(item,index){ %>
            <tr>
              <td><%= item.ident %></td>
              <td><%= item.destination.city %></td>
              <td><%= item.aircraft_type %></td>
              <td><%= item.scheduled_off %></td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </body>
</html>
